<table>
  <tr>
    <div style="background-color: <%= category.color %>">
      <h2> <%= category.name %> </h2>
    </div>
  </tr>
  <tr>
    <td>
      <%= image_tag(category.picture, width: 70) %>
    </td>
    <td>
      <ul class="sites">
        <%= render @sites.where(category_id: category.id) %>
      </ul>
    </td>
  </tr>
</table>


