<h1>Select category</h1>

<table>
  <tbody>
  <% @categories.each do |category| %>
      <tr>
        <td><%= link_to image_tag(category.picture), site_path(@site, category_id: category.id), method: :put %></td>
        <td><%= link_to category.name, site_path(@site, category_id: category.id), method: :put %></td>
      </tr>
  <% end %>
  </tbody>
</table>

