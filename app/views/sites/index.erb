<h1>Watched resource list</h1>

<ul class="sites">
  <%= render @sites %>
</ul>

<div class="row">
  <div>
    <%= form_for @site do |f| %>

        <%= f.label :url, class: "span1 offset1" %>
        <%= f.text_field :url, class: "span6 offset2" %>

        <%= f.hidden_field :user_id %>

        <%= f.submit "Watch", class: "span3 offset9 btn" %>
    <% end %>

  </div>
</div>

<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary offset3" %>
